{
  "name": "job-hunter",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "engines": {
    "node": ">=18.0.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "NODE_OPTIONS='--max-old-space-size=4096' node src/index.js",
    "dev": "NODE_OPTIONS='--max-old-space-size=4096' nodemon src/index.js",
    "test": "mocha --require @babel/register 'test/**/*.test.js' --timeout 10000",
    "test:watch": "mocha --require @babel/register 'test/**/*.test.js' --watch --timeout 10000",
    "profile:memory": "NODE_OPTIONS='--max-old-space-size=8192' node profile.js",
    "profile:ai-coach": "NODE_OPTIONS='--max-old-space-size=8192' npx clinic heapprofiler --autocannon [ -m POST '/api/v1/ai-coach/journal' -H 'Content-Type: application/json' -b '{\"content\":\"Test journal entry for memory profiling\"}' ] -- node src/index.js",
    "load-test": "node load-test.js",
    "profile:install": "npm install -g clinic && npm install --save-dev clinic axios"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/noobnarayan/job-hunter.git"
